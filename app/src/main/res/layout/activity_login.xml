<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/iv_teckers"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        app:srcCompat="@drawable/teckers"/>

    <Button
        android:id="@+id/login_button_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_login_fb"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textColor="#fff"
        android:text="Iniciar con Facebook"
        android:layout_below="@id/iv_teckers"/>

    <TextView
        android:id="@+id/tv_or"
        android:layout_below="@id/login_button_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/or"/>

    <Button
        android:id="@+id/login_button_gmail"
        android:layout_below="@id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_login_gmail"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textColor="#fff"
        android:text="Iniciar con Google" />

    <!--com.facebook.login.widget.LoginButton
        android:id="@+id/fb_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal" /-->

    <Button
        android:id="@+id/login_button_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorAccent"
        android:background="@android:color/transparent"
        android:text="@string/skip" />

</RelativeLayout>
